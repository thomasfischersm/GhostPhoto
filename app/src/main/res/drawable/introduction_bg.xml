<?xml version="1.0" encoding="utf-8"?>

<!-- A background for the login activity. It contains concentric circles. -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary" />
            <size
                android:width="100dp"
                android:height="100dp" />
        </shape>
    </item>
    <item
        android:right="0dp"
        android:bottom="20dp"
        android:left="0dp"
        android:top="-20dp">
        <shape
            android:shape="oval"
            android:useLevel="false">
            <solid android:color="#f44b3e" />
            <size android:height="100dp" android:width="100dp"/>
        </shape>
    </item>
    <item
        android:right="12dp"
        android:bottom="32dp"
        android:left="12dp"
        android:top="-8dp">
        <shape
            android:shape="oval"
            android:useLevel="false">
            <solid android:color="#f45144" />
            <size android:height="76dp" android:width="76dp"/>
        </shape>
    </item>
    <item
        android:right="25dp"
        android:bottom="45dp"
        android:left="25dp"
        android:top="5dp">
        <shape
            android:shape="oval"
            android:useLevel="false">
            <solid android:color="#f4574a" />
            <size android:height="53dp" android:width="53dp"/>
        </shape>
    </item>
</layer-list>
